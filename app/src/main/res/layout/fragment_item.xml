<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/details_back_color"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_character"
        style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/character_details" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_image_height"
        android:adjustViewBounds="true"
        android:padding="@dimen/details_image_padding"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/character_field_padding"
        android:textSize="@dimen/character_field_text_size"
        android:fontFamily="@font/macondo_regular"
        tools:text="name" />

    <TextView
        android:id="@+id/species"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/character_field_padding"
        android:textSize="@dimen/character_field_text_size"
        android:fontFamily="@font/macondo_regular"
        tools:text="species" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/character_field_padding"
        android:textSize="@dimen/character_field_text_size"
        android:fontFamily="@font/macondo_regular"
        tools:text="status" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/character_field_padding"
        android:textSize="@dimen/character_field_text_size"
        android:fontFamily="@font/macondo_regular"
        tools:text="gender" />

    <TextView
        android:id="@+id/hair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/character_field_padding"
        android:textSize="@dimen/character_field_text_size"
        android:fontFamily="@font/macondo_regular"
        tools:text="hair" />

</LinearLayout>